<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HyperlinkTypeMapper">
	
	<resultMap type="com.flc.entity.hyperlinktype.HyperlinkType" id="hyperlinktypeResultMap">
		<id column="HYPERLINKTYPE_ID" property="HYPERLINKTYPE_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		hyperlink_type
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		HYPERLINKTYPE_CODE,	
		SORT,	
		IMAGE,	
		REMARK,	
		IS_DEL,	
		HYPERLINKTYPE_ID,
		PARENT_ID,
		NAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{HYPERLINKTYPE_CODE},	
		#{SORT},	
		#{IMAGE},	
		#{REMARK},	
		#{IS_DEL},	
		#{HYPERLINKTYPE_ID},
		#{PARENT_ID},
		#{NAME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			HYPERLINKTYPE_ID = #{HYPERLINKTYPE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			HYPERLINKTYPE_CODE = #{HYPERLINKTYPE_CODE},
			SORT = #{SORT},
			IMAGE = #{IMAGE},
			REMARK = #{REMARK},
			IS_DEL = #{IS_DEL},
		NAME = #{NAME},
		HYPERLINKTYPE_ID = HYPERLINKTYPE_ID
		where 
		HYPERLINKTYPE_ID = #{HYPERLINKTYPE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			HYPERLINKTYPE_ID = #{HYPERLINKTYPE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.HYPERLINKTYPE_ID!= null and pd.HYPERLINKTYPE_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.HYPERLINKTYPE_ID}
		</if>
		
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
			order by SORT
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listByParentId" parameterType="String" resultMap="hyperlinktypeResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PARENT_ID = #{parentId} order by NAME 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
</mapper>