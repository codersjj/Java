<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HomepageMapper">
	
	<!--表名 -->
	<sql id="tableName">
		category
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,		
		value,		
		label,		
		type,		
		description,
		sort,	
		parent_id,
		create_by,
		create_date,
		update_by,
		update_date,
		remarks,
		del_flag
	</sql>
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{id},		
		#{value},		
		#{label},		
		#{type},		
		#{description},
		#{sort},	
		#{parent_id},
		#{create_by},
		#{create_date},
		#{update_by},
		#{update_date},
		#{remarks},
		#{del_flag}
	</sql>
	
	<!-- 通过USERNAME获取数据 -->
	<select id="listByParentid" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			parent_id = #{parent_id}
	</select>
	
</mapper>